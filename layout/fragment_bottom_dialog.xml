<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas. android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECECEC"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context=".fragmenst.BottomDialogFragment">

    <LinearLayout
        android:id="@+id/linearColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="select"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorRed"
            android:gravity="center"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colorYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorYellow"
            android:gravity="center"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorBlue"
            android:gravity="center"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colorGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorGreen"
            android:gravity="center"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colorPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPurple"
            android:gravity="center"
            android:textSize="12sp" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/replayNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_replay"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/replay_note"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/archiveNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_archive"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/archive_note"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/unarchiveNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_unarchive"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/unarchive_note"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/deleteNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/delete_note"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/deleteForever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/delete_forever"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/makeCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_copy"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/make_copy"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_share"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/share_note"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/labelsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_label"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/labels"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spnr_labelsName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="16dp"
            android:spinnerMode="dialog"
            app1:layout_constraintTop_toTopOf="@id/lable"
            app1:layout_constraintStart_toEndOf="@+id/lable"
            app1:layout_constraintBottom_toBottomOf="@+id/lable"
            app1:layout_constraintEnd_toEndOf="parent" />

        <!--        <com.google.android.material.textview.MaterialTextView-->
        <!--            android:id="@+id/lableSelected"-->
        <!--            android:text="Without Label"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:drawablePadding="8dp"-->
        <!--            android:padding="8dp"-->
        <!--            app1:layout_constraintTop_toTopOf="@id/spnr_labelsName"-->
        <!--            app1:layout_constraintBottom_toBottomOf="@id/spnr_labelsName"-->
        <!--            app1:layout_constraintStart_toStartOf="@id/spnr_labelsName"-->
        <!--            app1:layout_constraintEnd_toEndOf="@id/spnr_labelsName"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

